<!DOCTYPE html>
<t:layout title="${message:title}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    
    <div class="row-fluid">
    
    	<div class="well span6">
    		<div class="row-fluid" >
				<h4 class="span6">${message:my.agenda}</h4>
	   			<t:pagelink page="index" class="btn pull-right">${message:show.all}</t:pagelink>
   			</div>
    		
    		<t:progressivedisplay t:id="calendarsList" t:update="show" t:initial="block:loadingBlock">
    			<table class="table table-hover">
    				<tbody>
			    		<t:loop source="events" value="event">
			    			<tr>
			    				<td>${eventTimeRange}</td>
			    				<td>${event.summary}</td>
			    			</tr>
			    		</t:loop>
	    			</tbody>
	    		</table>
    		</t:progressivedisplay>
    		
    	</div>
    	
    	<div class="well span6">
    		<div class="row-fluid" >
				<h4 class="span6">${message:my.todo.list}</h4>
	   			<t:pagelink page="index" class="btn pull-right">${message:show.all}</t:pagelink>
   			</div>
   			
   			<t:progressivedisplay t:id="tasksList" t:update="show" t:initial="block:loadingBlock">
    			<table class="table table-hover">
    				<tbody>
			    		<t:loop source="tasks" value="task">
			    			<tr>
			    				<td>${task.title}</td>
			    				<td></td>
			    			</tr>
			    		</t:loop>
	    			</tbody>
	    		</table>
    		</t:progressivedisplay>
    		
    	</div>
        
    </div>   
    
    <t:block t:id="loadingBlock">
    	<div style="text-align:center;">
    		<img src="${asset:huge_loading.gif}" />
    	</div>
    </t:block> 

</t:layout>