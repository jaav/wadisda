<!DOCTYPE html>
<t:layout title="${message:title}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

	<t:form t:id="accountForm" class="form-horizontal" t:validate="account">
		<t:errors class="literal:alert alert-error" />

		<div class="control-group">
			<t:label t:for="name" class="control-label">${message:display.name}</t:label>
			<t:textfield t:id="name" value="account.name" class="span4" />
		</div>

		<div class="control-group">
			<t:label t:for="calendarName" class="control-label">${message:calendar.name}</t:label>
			<t:select t:id="calendarName" value="account.calendar" encoder="calendarInfoEncoder" model="calendarsModel" class="span4" data-placement="right" data-toggle="tooltip" data-original-title="${message:calendar.name.help}" blankOption="never" />
		</div>

		<div class="control-group">
			<t:label t:for="todolistName" class="control-label">${message:todolist.name}</t:label>
			<t:select t:id="todolistName" value="account.tasksList" encoder="tasksListInfoEncoder" model="todolistsModel" class="span4" data-placement="right" data-toggle="tooltip" data-original-title="${message:todolist.name.help}" blankOption="never" />
		</div>

		<div class="form-actions span9 controls-row" style="margin-left:0;">
			<div class="btn-toolbar pull-right">
				<t:pagelink page="index" class="btn">${message:cancel}</t:pagelink>
				<button type="submit" class="btn btn-primary">${message:save}</button>
			</div>
		</div>

	</t:form>

</t:layout>