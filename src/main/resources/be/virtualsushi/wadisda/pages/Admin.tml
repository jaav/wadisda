<!DOCTYPE html>
<t:layout title="${message:title}"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">

	<t:form t:id="adminForm" >
		<t:zone t:id="activeCheckboxZone" update="show">

			<t:grid source="users" row="user" model="userModel" include="name,email,active" class="table table-hover" lean="true">
				<p:activeCell>
						<t:ajaxcheckbox t:id="activeCheckbox" t:value="user.active" t:clientEvent="click" t:event="change" t:context="user.id" t:zone="activeCheckboxZone"/>
				</p:activeCell>
				<p:empty>
					<span class="badge badge-important">${message:empty.data}</span>
				</p:empty>
			</t:grid>
	
		</t:zone>
	</t:form>

</t:layout>