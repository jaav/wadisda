<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<title>${message:app.title}: ${title}</title>
		<script>
			$(window).load(function() {
				function colorizeSelect(){
	    			if($(this).val() == "") $(this).addClass("empty");
	    			else $(this).removeClass("empty")
				}
				
				$("select option").addClass("not-empty");
	
				$("select").on('change keyup', colorizeSelect).change();
    		});
		</script>
	</head>
	<body style="padding: 25px;">
		<t:wadisdaheader t:containerClass="container-fluid" />
		<div class="container-fluid" style="margin-top:50px;">
			<div class="row-fluid">
				<div class="span3">
					<div class="row-fluid page-header">
						<div class="thumbnail span3">
							<img src="${currentUser.avatarUrl}" />
						</div>
						<div class="span6">
							<h5>${currentUser.name}</h5>
							<div class="btn-toolbar">
								<a class="btn btn-info" href="#">${message:account}</a>
								<t:actionlink t:id="logout" class="btn btn-info" >${message:logout}</t:actionlink>
							</div>
						</div>
					</div>

					<div class="well" style="padding: 8px 0;">
						<ul class="nav nav-list">
							<li class="${getMenuItemClass('index')}">
								<t:pagelink page="index">
									<i class="icon-home" />&nbsp;Dashboard
								</t:pagelink>
							</li>
							<li>
								<a href="#">
									<i class="icon-ok" />&nbsp;Todo
									list
								</a>
							</li>
							<li>
								<a href="#">
									<i class="icon-calendar" />&nbsp;Agenda
								</a>
							</li>
						</ul>
					</div>
					<hr />
					<div class="accordion" id="accordion">
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse"
									data-parent="#accordion" href="#collapse0">
									<i class="icon-edit" />&nbsp;${message:register}
									<i class="icon-chevron-down" style="float:right;" />
								</a>
							</div>
							<div id="collapse0"
								class="accordion-body collapse ${getMenuCategoryClass(['editRegistration','overviewRegistrations'])}">
								<div class="accordion-inner">
									<ul class="nav nav-list">
										<li class="${getMenuItemClass('editRegistration')}">
											<t:pagelink page="editRegistration" context="literal:new">
												<i class="icon-chevron-right" />&nbsp;${message:new}
											</t:pagelink>
										</li>
										<li class="${getMenuItemClass('overviewRegistrations')}">
											<t:pagelink page="overviewRegistrations">
												<i class="icon-chevron-right" />&nbsp;${message:overview}
											</t:pagelink>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse"
									data-parent="#accordion" href="#collapse1">
									<i class="icon-barcode" />&nbsp;${message:products}
									<i class="icon-chevron-down" style="float:right;" />
								</a>
							</div>
							<div id="collapse1" class="accordion-body collapse">
								<div class="accordion-inner">
									<ul class="nav nav-list">
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:new}
											</t:pagelink>
										</li>
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:overview}
											</t:pagelink>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse"
									data-parent="#accordion" href="#collapse2">
									<i class="icon-envelope" />&nbsp;${message:addresses}
									<i class="icon-chevron-down" style="float:right;" />
								</a>
							</div>
							<div id="collapse2" class="accordion-body collapse">
								<div class="accordion-inner">
									<ul class="nav nav-list">
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:new}
											</t:pagelink>
										</li>
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:overview}
											</t:pagelink>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse"
									data-parent="#accordion" href="#collapse3">
									<i class="icon-flag" />&nbsp;${message:ews}
									<i class="icon-chevron-down" style="float:right;" />
								</a>
							</div>
							<div id="collapse3" class="accordion-body collapse">
								<div class="accordion-inner">
									<ul class="nav nav-list">
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:new}
											</t:pagelink>
										</li>
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:overview}
											</t:pagelink>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<div class="accordion-group">
							<div class="accordion-heading">
								<a class="accordion-toggle" data-toggle="collapse"
									data-parent="#accordion" href="#collapse4">
									<i class="icon-fire" />&nbsp;${message:violence}
									<i class="icon-chevron-down" style="float:right;" />
								</a>
							</div>
							<div id="collapse4" class="accordion-body collapse">
								<div class="accordion-inner">
									<ul class="nav nav-list">
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:new}
											</t:pagelink>
										</li>
										<li>
											<t:pagelink page="index">
												<i class="icon-chevron-right" />&nbsp;${message:overview}
											</t:pagelink>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<hr />
					<div class="btn-toolbar">
						<a class="btn btn-info">
							<i class="icon-print icon-white" />&nbsp;${message:print}
						</a>
						<a class="btn btn-info">
							<i class="icon-share-alt icon-white" />&nbsp;${message:export}
						</a>
					</div>
				</div>
				<div class="span9">
					<h1 class="page-header">
						${title}
					</h1>
					<t:body />
				</div>
			</div>
		</div>
	</body>
</html>
